{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "target": "es2019",

    "outDir": ".test/build/",

    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,

    "emitDecoratorMetadata": true,
