{
  "name": "meal-planner.shopping-list-service",
  "description": "API for shopping lists",
  "version": "0.1.0",
  "private": true,
  "author": "Maurits van Mastrigt <maurits@nerdieworks.nl>",
  "license": "MIT",
  "main": "build/server.js",
  "scripts": {
    "start": "node build/server.js",
    "build": "rimraf build/ && tsc",
    "dev": "nodemon",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "echo 'todo' && exit 1"
  },
  "nodemonConfig": {
    "watch": [
      "src/"
    ],
    "ext": "ts,json",
    "exec": "yarn build && yarn start",
    "ignore": [
      ".git/",
      "node_modules/",
      "build/"
    ],
    "delay": 2000
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && yarn test"
    }
  },
  "dependencies": {
    "class-transformer": "^0.2.3",
    "class-validator": "^0.12.1",
    "http-status-codes": "^1.4.0",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-router": "^8.0.0-alpha.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.8.1-alpha.2",
    "tsyringe": "^4.1.0",
    "uuidv4": "^6.0.7",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/koa": "^2.11.3",
    "@types/node": "^13.13.1",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  }
}
